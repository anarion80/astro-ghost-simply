---
import StoryPreviousNext from "../story/StoryPreviousNext.astro";
import { t } from "@utils/use-lang";
export interface Props {
    post?: any;
    nextPost?: any;
    prevPost?: any;
}

const { post, nextPost, prevPost } = Astro.props;
---

<div class="post-wrap max-w-1100 relative mx-auto">
    <div
        id="post-body"
        class="post-body px-4 mx-auto max-w-740 relative"
        set:html={post.html}
    />
</div>

<footer class="post-footer px-4 mx-auto max-w-740 pt-10">
    <!-- <Tags tags={post.tags} />

    <SocialShare post={post} trackingName="Footer" /> -->

    {/*{!-- Previous and next article --}*/}
    <div class="prev-next pb-8">
        <hr class="my-10" />
        {
            prevPost && (
                <StoryPreviousNext
                    post={prevPost}
                    storyTitle={t(`Previous article`)}
                    divClass="mb-8"
                />
            )
        }

        {
            nextPost && (
                <StoryPreviousNext
                    post={nextPost}
                    storyTitle={t(`Next article`)}
                    divClass=""
                />
            )
        }
    </div>
</footer>
