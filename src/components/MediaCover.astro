---
export interface Props {
	background?: string;
	hasGradient?: boolean;
    altTitle?: string;
}

const { background, hasGradient, altTitle } = Astro.props;
---
{background &&
    <img src={background} style={{
        position: `absolute`,
        height: `100%`,
        width: `100%`,
        inset: 0,
        objectFit: `cover`,
    }} class="image-inset blur-up lazyloaded !important" alt={altTitle && altTitle} />
}

{hasGradient && <div class="simply-cover-gradient absolute inset-0 z-2 bg-black bg-opacity-50"></div>}