---
import Author from '@components/Author.astro';
import { Image } from 'astro:assets';
import IconListen from '@components/IconListen';
import { relativeUrl } from '@utils/relativeUrl';
import { t } from "@utils/use-lang";
export interface Props {
	post?: any;
    storyTitle?: string,
    divClass?: string,
}

const { post } = Astro.props;
const image = post.feature_image
---
<article class="podcast-card flex flex-col md:flex-row w-full relative overflow-hidden mb-12">
    <header class="podcast-card-header md:ml-4 p-5 order-2">
        <Author post={post} />

        <h2 class="spc-c-title my-5 text-2xl text-title font-sans"><a href={relativeUrl(post.url)} class="relative z-3">{post.title}</a></h2>
        <p class="spc-c-excerpt mb-5">{post.excerpt.split(` `).splice(0,30).join(` `)}</p>
        <a href={relativeUrl(post.url)} class="listen-btn button is-primary relative z-3">
        <IconListen />
        <span class="uppercase">{t(`Listen`)}</span></a>
    </header>

    <a href={relativeUrl(post.url)} class="spc-c-img relative w-full md:w-1/3 flex-none bg-gray-200 story-image md:h-auto">
        {post.feature_image &&
            <Image
                src={image}
                alt={post.title}
                style={{
                    position: `absolute`,
                    height: `100%`,
                    width: `100%`,
                    inset: 0,
                    objectFit: `cover`,
                }} class="absolute u-image block blur-up lazyloaded rounded-2xl"
                widths={[300, 600]}
                sizes={`(max-width: 1000px) 400px, 600px`}
                width="300"
                height="280"
            />
        }
    </a>
</article>