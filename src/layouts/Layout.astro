import '@fontsource/inter/400.css'
import '@fontsource/inter/500.css'
import '@fontsource/inter/600.css'
import '@fontsource/inter/700.css'
//import "../styles/global.css"
//import "../css/global.css"

export interface Props {
	children?: any;
	bodyClass?: string;
	footer?: boolean;
	isPost?: boolean;
	isHome?: boolean;
	title?: string;
}

const { bodyClass, footer, isPost, isHome } = Astro.props;

// const { id, title } = Astro.props;

const site = await getSettings();
//console.log(site);

const accentColor = site.accent_color;
const hasDropDown = siteConfig.menuDropdown ? true : false
---

<!DOCTYPE html>
<html lang={site.lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tiny-slider/2.9.3/tiny-slider.css" />
		<meta name="generator" content={Astro.generator} />
		<!-- <style type="text/css">{`${site.codeinjection_styles}`}</style>
		<style type="text/css">{`${site.codeinjection_head}`}</style> -->
		<title>{site.title}</title>
	</head>
	<body class={bodyClass}>
		<div class="simply-viewport flexColumnTop">
			<script>
				/* to turn the Header transparent when hero picture is used (and back to normal when srolled down) */
				const headerTransparency = () => {
				const hasCover = document.body.closest('.has-cover')
				const $jsHeader = document.querySelector('.js-header')

				window.addEventListener('scroll', () => {
					const lastScrollY = window.scrollY

					if (lastScrollY > 5) {
						$jsHeader && $jsHeader.classList.add('shadow-header', 'header-bg')
					} else {
						$jsHeader && $jsHeader.classList.remove('shadow-header', 'header-bg')
					}

					if (!hasCover) return

					lastScrollY >= 20 ? document.body.classList.remove('is-head-transparent') : document.body.classList.add('is-head-transparent')
				}, { passive: true })
			}

			headerTransparency()
			</script>
			<Header site={site} hasDropDown={hasDropDown} />

			<main class="simply-main relative min-h-lg"><slot /></main>

			{
				footer &&
				/* <Footer site={site} isPost={isPost}/> */
				<FooterDark site={site}/>
				/* <FooterNotMenu site={site} isPost={false}/> */
			}

		</div>
		<div class="loadingBar top-0 fixed right-0 left-0 hidden"></div>
		<SvgIcons />
		<script>
			import "../scripts/menu.js";
		</script>
	</body>
</html>
<style set:text={`:root {--ghost-accent-color: ${accentColor};}`}></style>
